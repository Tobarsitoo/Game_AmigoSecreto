            <!-- L√≥gica de DataTables -->
            <script>
                $(document).ready(function () {
                    // Inicializa DataTable
                    $('#usersTable').DataTable({
                        paging: true,
                        searching: true,
                        responsive: true,
                        autoWidth: false,
                        language: {
                            processing: "Procesando...",
                            search: "Buscar:",
                            lengthMenu: "Mostrar _MENU_ registros",
                            info: "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                            infoEmpty: "Mostrando registros del 0 al 0 de un total de 0 registros",
                            infoFiltered: "(filtrado de un total de _MAX_ registros)",
                            infoPostFix: "",
                            loadingRecords: "Cargando...",
                            zeroRecords: "No se encontraron resultados",
                            emptyTable: "Ning√∫n dato disponible en esta tabla",
                            paginate: {
                                first: "Primero",
                                previous: "Anterior",
                                next: "Siguiente",
                                last: "√öltimo"
                            },
                            aria: {
                                sortAscending: ": Activar para ordenar la columna de manera ascendente",
                                sortDescending: ": Activar para ordenar la columna de manera descendente"
                            }
                        },
                        ajax: {
                            url: '/admin/users',
                            dataSrc: ''
                        },
                        columns: [
                            { data: 'id_usuario' },
                            { data: 'nombres' },
                            {
                                data: 'genero',
                                render: function (data) {
                                    return data === 'M' ? 'Masculino' : data === 'F' ? 'Femenino' : 'No especificado';
                                }
                            },
                            { data: 'cedula' },
                            { 
                                data: 'estado',
                                render: function (data) {
                                    return data === '1' ? 'Activo' : data === '0' ? 'Inactivo' : 'Sin estado';
                                } 
                            },
                            { data: 'rol' },
                            {
                                data: null,
                                render: function (data, type, row) {
                                    return `
                        <button class="btn btn-warning btn-sm editUserBtn" data-id="${row.id_usuario}">
                            <i class="fas fa-edit"></i> Editar
                        </button>
                        <button class="btn btn-danger btn-sm deleteUserBtn" data-id="${row.id_usuario}">
                            <i class="fas fa-trash-alt"></i> Eliminar
                        `;
                                }
                            }
                        ]
                    });
                });
            </script>
            <!-- L√≥gica de agregar usuario -->
            <script>
                // Agregar usuario
                $(document).ready(function () {
                    // Manejar el env√≠o del formulario de agregar usuario
                    $('#addUserForm').on('submit', function (e) {
                        e.preventDefault();

                        const formData = {
                            cedula: $('#cedula').val(),
                            nombres: $('#nombre').val(),
                            area: $('#area').val(),
                            fecha_nacimiento: $('#fechaNacimiento').val(),
                            genero: $('#genero').val(),
                            email: $('#email').val(),
                            rol: $('#rol').val(),
                        };

                        $.ajax({
                            url: '/admin/users',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(formData),
                            success: function (response) {
                                Swal.fire({
                                    icon: 'success',
                                    title: '¬°Usuario agregado!',
                                    text: response.message,
                                    confirmButtonColor: '#ff9100',
                                    confirmButtonText: 'Aceptar'
                                });
                                $('#addUserForm')[0].reset();
                                $('#usersTable').DataTable().ajax.reload();
                            },
                            error: function (xhr) {
                                Swal.fire('Error', xhr.responseJSON.error || 'Error al agregar el usuario', 'error');
                            },
                        });
                    });
                });
            </script>
            <!-- L√≥gica de edici√≥n de usuario -->
            <script>
                // Mostrar el modal de edici√≥n con los datos del usuario
                $(document).on('click', '.editUserBtn', function () {
                    const userId = $(this).data('id');

                    // Obtener datos del usuario a editar (AJAX o de alguna variable de datos)
                    $.ajax({
                        url: `/admin/users/${userId}`,
                        method: 'GET',
                        success: function (data) {
                            let fecha = new Date(data.fecha_nacimiento);
                            let fechaFormateada = fecha.getFullYear() + '-' + (fecha.getMonth() + 1).toString().padStart(2, '0') + '-' + fecha.getDate().toString().padStart(2, '0');
                            
                            $('#editUserId').val(data.id_usuario);
                            $('#editNombre').val(data.nombres);
                            $('#editGenero').val(data.genero);
                            $('#editCuenta').val(data.cuenta || 'Sin cuenta');
                            $('#editEstado').val(data.estado);
                            $('#editArea').val(data.area);
                            $('#editFechaNa').val(fechaFormateada);
                            $('#editCedula').val(data.cedula);
                            $('#editRol').val(data.rol);
                            $('#editUserModal').modal('show');
                        }
                    });
                });

                // Manejar el env√≠o del formulario de edici√≥n
                $('#editUserForm').on('submit', function (e) {
                    e.preventDefault();

                    const formData = {
                        id_usuario: $('#editUserId').val(),
                        nombres: $('#editNombre').val(),
                        genero: $('#editGenero').val(),
                        cedula: $('#editCedula').val(),
                        cuenta: $('#editCuenta').val() || null,
                        estado: $('#editEstado').val(),
                        contrase√±a: $('#editContrase√±a').val(),
                        area: $('#editArea').val(),
                        fecha_nacimiento: $('#editFechaNa').val(),
                        rol: $('#editRol').val()
                    };

                    $.ajax({
                        url: `/admin/users/${formData.id_usuario}`,
                        method: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify(formData),
                        success: function (response) {
                            Swal.fire({
                                icon: 'success',
                                title: '¬°Usuario actualizado!',
                                text: response.message,
                                confirmButtonColor: '#ff9100',
                                confirmButtonText: 'Aceptar'
                            });
                            $('#usersTable').DataTable().ajax.reload();
                            $('#editUserModal').modal('hide');
                        },
                        error: function (xhr) {
                            Swal.fire('Error', xhr.responseJSON.error || 'Error al actualizar el usuario', 'error');
                        }
                    });
                });
            </script>
            <!-- L√≥gica de eliminaci√≥n de usuario -->
            <script>
                // Mostrar el modal de eliminaci√≥n
                $(document).on('click', '.deleteUserBtn', function () {
                    const userId = $(this).data('id');
                    $('#deleteUserId').val(userId);
                    $('#deleteUserModal').modal('show');
                });

                // Confirmar eliminaci√≥n
                $('#confirmDeleteBtn').on('click', function () {
                    const userId = $('#deleteUserId').val();

                    $.ajax({
                        url: `/admin/users/${userId}`,
                        method: 'DELETE',
                        success: function (response) {
                            Swal.fire({
                                icon: 'success',
                                title: '¬°Usuario eliminado!',
                                text: response.message,
                                confirmButtonColor: '#ff9100',
                                confirmButtonText: 'Aceptar'
                            });
                            $('#usersTable').DataTable().ajax.reload();
                            $('#deleteUserModal').modal('hide');
                        },
                        error: function (xhr) {
                            Swal.fire('Error', xhr.responseJSON.error || 'Error al eliminar el usuario', 'error');
                        }
                    });
                });

            </script>
